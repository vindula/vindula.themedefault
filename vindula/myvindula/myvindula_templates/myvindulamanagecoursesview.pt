<html>
<body metal:use-macro="here/main_template/macros/master">

<metal:js fill-slot="javascript_head_slot">
	<script type="text/javascript" src="js/mascara.js" 
    tal:attributes="src string:${view/static}/js/mascara.js"></script>
</metal:js>
<metal:block fill-slot="top_slot">
        <tal:dummy tal:define="dummy python:request.set('disable_border',1)" />
</metal:block>
    
    <div metal:fill-slot="content">            

    	<metal:use use-macro="context/@@myvindulapanel/macros/page"/>    
	    <div id="content" tal:define="form_data view/load_form | python:{};
		                              errors form_data/errors | python:{};
									  form_values form_data/data | python:{};">

	        <tal:cont condition="request/id | nothing">
				<h1 tal:content="string:Editar o Curso: ${form_values/title|nothing}"></h1>	
			</tal:cont>
	        <tal:cont condition="not: request/id | nothing">
				<h1> Adicionar novo curso</h1>	
			</tal:cont>
			<dl class="portalMessage error" tal:condition="context/REQUEST/error|nothing">
				<tal:cont condition="python:context.REQUEST.error=='2'">
					<dt>Error</dt>
            		<dd>verifique os campos em destaque</dd>
				</tal:cont>	
        	</dl>
			<div id="interna" >    		
		        <form name="myvindula-manage-courses" id="myvindula-manage-courses" enctype="multipart/form-data" class="enableAutoFocus" action="myvindula-manage-courses" method="POST">
		            <fieldset>
		            	<legend>Informações do Idioma</legend>
						<!-- ID da courses--> 
						<input id="id" type="hidden" value="" name="id"	tal:condition="request/id | nothing"  
																		tal:attributes="value request/id| form_values/id |nothing">
	
						<tal:def define="html python:view.geraExtraCampos(form_data)">
							<tal:rep repeat="x html">
								<div tal:content="structure x"/>
							</tal:rep>
						</tal:def>
					
					</fieldset>
					<!-- Botões de ação -->	
				   	<fieldset>
				   		<br/>
						<div style="float:left; width:100%">
							<input style="width:100px" class="button-erp" type="submit" value="Voltar" name="form.voltar">
							<input style="width:100px;" class="button-erp" type="submit" value="Salvar" name="form.submited">
						</div>
					</fieldset>
				</form>
			</div>
	    </div>
    </div>    
</body>
</html>