<?xml version="1.0" encoding="UTF-8"?> 
<rules xmlns="http://namespaces.plone.org/diazo" 
	   xmlns:css="http://namespaces.plone.org/diazo/css" 
	   xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <!-- Pull in Plone CSS -->
    <prepend theme="/html/head" content="/html/head/link | /html/head/style | /html/head/script " />
	
    <!-- Prevent theme usage in zmi -->
    <rules css:if-content="#visual-portal-wrapper">
        <theme href="theme.html" />
    </rules>
    <replace content="/html/head/title" theme="/html/head/title" />
    <replace content="/html/head/base" theme="/html/head/base" />
    <replace content="/html/head/meta" theme="/html/head/meta" />
	
	<!-- Portal top -->
	<replace css:content="#portal-personaltools" css:theme="#data h4" />
	<copy css:content="#menu_viewlet" css:theme="#nav" />
	<copy css:content-children="#portal-breadcrumbs" css:theme="#geral_breadcrumb" />

	<!-- Portal content -->
	<!--copy css:content="#edit-bar" css:theme="#geral_colunas div" /-->
	<copy css:content="#content" css:theme="#geral_colunas" />
	
</rules>