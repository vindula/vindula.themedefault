<div id="menu_viewlet" tal:define="menus view/getMenu | nothing;
								   submenu view/getSubMenu | nothing">	
	
	<ul class="nivel1" tal:condition="menus">
		<li tal:repeat="menu menus" tal:attributes="class python: view.isSelected(menu)">
			<a tal:content="menu/title" tal:attributes="href menu/absolute_url; alt menu/title">Menu</a>	
		</li>
	</ul>

	<ul class="nivel2" tal:condition="submenu">
		<li tal:repeat="item submenu" tal:attributes="class python: view.isSelected(item)">
			<a tal:content="item/title" tal:attributes="href item/absolute_url; alt item/title">Submenu</a>
		</li>
	</ul>
	
	<div class="visualClear"></div>
</div>