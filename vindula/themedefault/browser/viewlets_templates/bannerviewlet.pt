<div id="banner_homepage">
	<tal:cond tal:condition="python: context.portal_type == 'HomePage'">
		<tal:def tal:condition="homepage_view/context/getActive_banner | nothing" tal:define="homepage_view python: context.restrictedTraverse('@@view');">
			<link rel="stylesheet" type="text/css" href="/++resource++vindula.themedefault/css/banner_homepage.css">
			<!-- start: BANNER -->
			<div id="banner_home" tal:condition="homepage_view/context/getRef_banner">
				<tal:def define="banners homepage_view/getBanner">
					
					<!-- start: Conteudo do banner -->
					<div id="box_banner">
						<div id="cont_banner">
							<div tal:repeat="banner banners">
								<tal:cond condition="not: banner/url_image">
									<img tal:attributes="src banner/image; alt banner/title;">	
								</tal:cond>
								<tal:cond condition="banner/url_image">
									<a tal:attributes="href banner/url_image; target banner/target"><img tal:attributes="src banner/image; alt banner/title;"></a>
								</tal:cond>
							</div>
						</div>
					</div>
					<!-- end: Conteudo do banner -->
					
					<!-- start: Paginacao -->
					<input id="cycle-timeout-banner" type="hidden" tal:attributes="value homepage_view/context/getTime_transition_banner">
					<div class="paginacao pag_homepage" tal:condition="python: len(homepage_view.context.getRef_banner()) > 1">
						<div id="cycle-prev-banner" class="circle float-left c-pointer">
							<img class="left" src="/++theme++vindula.themedefault/images/buttons/seta_left.png" title="Anterior"/>
						</div>
						<tal:cond condition="python: homepage_view.context.getType_navigation() == 'image'">
							<div id="cycle-nav-banner"></div>
						</tal:cond>
						<tal:cond condition="python: homepage_view.context.getType_navigation() == 'number'">
							<div class="pag_number">
								<p class="cycle-nav-banner" id="cycle-nav-banner"></p>
								<p tal:content="python: '/' + str(len(homepage_view.context.getRef_banner()))"></p>
							</div>
						</tal:cond>
						<div id="cycle-next-banner" class="circle float-left c-pointer">
							<img class="right" src="/++theme++vindula.themedefault/images/buttons/seta_right.png" title="Pr&oacute;ximo"/>
						</div>
					</div>
					<!-- end: Paginacao -->
					
				</tal:def>
			</div>
			<!-- end: BANNER -->
		</tal:def>
	</tal:cond>
</div>